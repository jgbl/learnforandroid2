<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jmg.learn.MainActivity" >

    <TextView
        android:id="@+id/word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/hello_world"
        android:textSize="@dimen/abc_text_size_large_material" />

    <TextView
        android:id="@+id/Comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/word"
        android:layout_centerHorizontal="true"
        android:text="@string/hello_world"
        android:textSize="@dimen/abc_text_size_medium_material" />

    <EditText
        android:id="@+id/txtMeaning3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnRight"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="56dp"
        android:ems="10"
        android:inputType="text"
        android:text="@string/hello_world"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/abc_text_size_large_material" />

    <EditText
        android:id="@+id/txtMeaning1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtMeaning2"
        android:layout_alignLeft="@+id/txtMeaning2"
        android:layout_marginBottom="56dp"
        android:ems="10"
        android:inputType="text"
        android:text="@string/hello_world"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/abc_text_size_large_material" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/txtMeaning2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtMeaning3"
        android:layout_alignLeft="@+id/txtMeaning3"
        android:layout_marginBottom="56dp"
        android:ems="10"
        android:inputType="text"
        android:text="@string/hello_world"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/abc_text_size_large_material" />

    <Button
        android:id="@+id/btnRight"
        android:layout_width="70sp"
        android:layout_height="40sp"
        android:layout_alignLeft="@+id/txtMeaning3"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:text="@string/btnRight"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btnSkip"
        android:layout_width="70sp"
        android:layout_height="40sp"
        android:layout_alignBaseline="@+id/btnRight"
        android:layout_alignBottom="@+id/btnRight"
        android:layout_toRightOf="@+id/btnRight"
        android:text="@string/btnSkip"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btnView"
        android:layout_width="70sp"
        android:layout_height="40sp"
        android:layout_below="@+id/txtMeaning3"
        android:layout_toRightOf="@+id/btnSkip"
        android:text="@string/btnView"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btnWrong"
        android:layout_width="70sp"
        android:layout_height="40sp"
        android:layout_alignBaseline="@+id/btnView"
        android:layout_alignBottom="@+id/btnView"
        android:layout_toRightOf="@+id/btnView"
        android:text="@string/btnWrong"
        android:textSize="12sp" />

</RelativeLayout>
